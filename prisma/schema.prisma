datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}

model Category {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String  @unique
  description String? 
  thumbnail String

  blogs Blog[]
}

model Blog {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  title String
  date  DateTime
  description String
  categoryID String  @db.ObjectId
  content String

  category  Category @relation(fields: [categoryID], references: [id])
}